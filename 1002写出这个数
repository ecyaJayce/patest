//1002写出这个数
#include<stdio.h>
#include<string.h>
void py(int x)		//有没有更有效率的方法？
{
	switch(x)
	{
	case 0:
		printf("ling");
		break;
	case 1:
		printf("yi"); 
		break;
	case 2:
		printf("er");
		break;
	case 3:
		printf("san");
		break;
	case 4:
		printf("si");
		break;
	case 5:
		printf("wu");
		break;
	case 6:
		printf("liu");
		break;
	case 7:
		printf("qi");
		break;
	case 8:
		printf("ba");
		break;
	case 9:
		printf("jiu");
		break;
	}
}
void print(int sum)
{
	if(sum>9)
		print(sum/10);
		printf(" ");
	py(sum%10);		//递归的方式保证最后一数字后面无空格
}
int main()
{
	int i=0;
	int sum=0;
	char arr[101]={'1','2','3','4','5','6','7'};//为了放下100位的数字，不能用int，否则内存会溢出
	for(i=0;i<strlen(arr);i++)
	{
		sum=sum+arr[i]-'0';
	}
	print(sum);
	return 0;
}
